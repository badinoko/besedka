    <script>
        const iframe = document.getElementById('rocketChatFrame');
        const loadingOverlay = document.getElementById('loadingOverlay');
        const currentUser = '{{ user.username }}';

        // üîÑ –§–£–ù–ö–¶–ò–Ø –ü–ï–†–ï–ö–õ–Æ–ß–ï–ù–ò–Ø –ö–ê–ù–ê–õ–û–í (–ò–°–ü–†–ê–í–õ–ï–ù–ù–´–ô –ú–ê–ü–ü–ò–ù–ì)
        function switchChannel(channelName) {
            console.log('üîÑ –ü–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ –Ω–∞ –∫–∞–Ω–∞–ª:', channelName);
            console.log('üìä –î–∏–∞–≥–Ω–æ—Å—Ç–∏–∫–∞ iframe –ü–ï–†–ï–î –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ–º:');
            console.log('   - URL:', iframe.src);
            console.log('   - –ì–æ—Ç–æ–≤–Ω–æ—Å—Ç—å:', iframe.readyState);
            console.log('   - –†–∞–∑–º–µ—Ä—ã:', iframe.offsetWidth, 'x', iframe.offsetHeight);

            // –û–±–Ω–æ–≤–ª—è–µ–º –∞–∫—Ç–∏–≤–Ω—É—é –∫–Ω–æ–ø–∫—É
            document.querySelectorAll('.channel-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelector(`[data-channel="${channelName}"]`).classList.add('active');

            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∑–∞–≥—Ä—É–∑–∫—É
            loadingOverlay.style.display = 'flex';

            // –£–ù–ò–§–ò–¶–ò–†–û–í–ê–ù–ù–´–ô –ú–ê–ü–ü–ò–ù–ì –ö–ê–ù–ê–õ–û–í (–í–ï–ó–î–ï –û–î–ò–ù–ê–ö–û–í–û!)
            // –ò—Å–ø–æ–ª—å–∑—É–µ–º —Ç–æ—á–Ω—ã–µ ID –∫–∞–Ω–∞–ª–æ–≤ –∏–∑ –±–∞–∑—ã –¥–∞–Ω–Ω—ã—Ö MongoDB
            const channelMapping = {
                'general': 'general',      // –í –±–∞–∑–µ: _id: 'general' (–∏—Å–ø—Ä–∞–≤–ª–µ–Ω–æ 23.06.2025)
                'vip': 'vip',              // –í –±–∞–∑–µ: _id: 'vip'
                'moderators': 'moderators' // –í –±–∞–∑–µ: _id: 'moderators'
            };

            const actualChannelId = channelMapping[channelName] || channelName;
            const newUrl = `{{ rocketchat_url }}/channel/${actualChannelId}?layout=embedded`;

            console.log('‚úÖ –ü–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ –Ω–∞ –∫–∞–Ω–∞–ª:', channelName, '-> ID:', actualChannelId);
            console.log('üåê –ù–æ–≤—ã–π URL (channel with layout=embedded):', newUrl);

            // –°–ü–ï–¶–ò–ê–õ–¨–ù–ê–Ø –î–ò–ê–ì–ù–û–°–¢–ò–ö–ê –î–õ–Ø –ü–†–û–ë–õ–ï–ú–ù–û–ì–û –ö–ê–ù–ê–õ–ê
            if (channelName === 'general') {
                console.log('üö® –°–ü–ï–¶–ò–ê–õ–¨–ù–ê–Ø –î–ò–ê–ì–ù–û–°–¢–ò–ö–ê –î–õ–Ø GENERAL:');
                console.log('   - Mapping —Ä–∞–±–æ—Ç–∞–µ—Ç:', channelMapping['general']);
                console.log('   - Final URL:', newUrl);
                console.log('   - –û–∂–∏–¥–∞–µ–º—ã–π URL: {{ rocketchat_url }}/channel/general?layout=embedded');
                console.log('   - –í–ê–ñ–ù–û: –ò—Å–ø–æ–ª—å–∑—É–µ–º /channel —Å layout=embedded –¥–ª—è —Å–∫—Ä—ã—Ç–∏—è –Ω–∞–≤–∏–≥–∞—Ü–∏–∏');
            }

            // –ü–†–ò–ù–£–î–ò–¢–ï–õ–¨–ù–û–ï –û–ë–ù–û–í–õ–ï–ù–ò–ï IFRAME —Å timestamp –¥–ª—è –∏–∑–±–µ–∂–∞–Ω–∏—è –∫–µ—à–∏—Ä–æ–≤–∞–Ω–∏—è
            const timestamp = new Date().getTime();
            const urlWithTimestamp = `${newUrl}&t=${timestamp}`;

            // –°–Ω–∞—á–∞–ª–∞ –æ—á–∏—â–∞–µ–º src —á—Ç–æ–±—ã –≥–∞—Ä–∞–Ω—Ç–∏—Ä–æ–≤–∞—Ç—å –ø–µ—Ä–µ–∑–∞–≥—Ä—É–∑–∫—É
            iframe.src = 'about:blank';
            console.log('üßπ Iframe –æ—á–∏—â–µ–Ω (about:blank)');

            // –ß–µ—Ä–µ–∑ –Ω–µ–±–æ–ª—å—à—É—é –∑–∞–¥–µ—Ä–∂–∫—É –∑–∞–≥—Ä—É–∂–∞–µ–º –Ω–æ–≤—ã–π URL
            setTimeout(() => {
                iframe.src = urlWithTimestamp;
                console.log('üîÑ Iframe –ø—Ä–∏–Ω—É–¥–∏—Ç–µ–ª—å–Ω–æ –ø–µ—Ä–µ–∑–∞–≥—Ä—É–∂–µ–Ω:', urlWithTimestamp);

                // –î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω–∞—è –¥–∏–∞–≥–Ω–æ—Å—Ç–∏–∫–∞ —á–µ—Ä–µ–∑ 2 —Å–µ–∫—É–Ω–¥—ã
                setTimeout(() => {
                    console.log('üîç –î–∏–∞–≥–Ω–æ—Å—Ç–∏–∫–∞ iframe –ü–û–°–õ–ï –∑–∞–≥—Ä—É–∑–∫–∏:');
                    console.log('   - URL:', iframe.src);
                    console.log('   - –†–∞–∑–º–µ—Ä—ã:', iframe.offsetWidth, 'x', iframe.offsetHeight);

                                    if (channelName === 'general') {
                    console.log('üö® –ö–†–ò–¢–ò–ß–ï–°–ö–ê–Ø –î–ò–ê–ì–ù–û–°–¢–ò–ö–ê –ö–ê–ù–ê–õ–ê GENERAL:');
                    console.log('   - Iframe –∑–∞–≥—Ä—É–∂–µ–Ω –ø–æ–ª–Ω–æ—Å—Ç—å—é');
                    console.log('   - URL —Å–æ–¥–µ—Ä–∂–∏—Ç general:', iframe.src.includes('general'));
                    console.log('   - URL –∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–π:', iframe.src.includes('/channel/'));
                    console.log('   - –ü–†–û–í–ï–†–¨–¢–ï –ü–û–õ–ï –í–í–û–î–ê –í –ë–†–ê–£–ó–ï–†–ï!');
                }
                }, 2000);
            }, 100);

            // –°–∫—Ä—ã–≤–∞–µ–º –∑–∞–≥—Ä—É–∑–∫—É —á–µ—Ä–µ–∑ 3 —Å–µ–∫—É–Ω–¥—ã
            setTimeout(() => {
                loadingOverlay.style.display = 'none';
                console.log('‚úÖ –ò–Ω–¥–∏–∫–∞—Ç–æ—Ä –∑–∞–≥—Ä—É–∑–∫–∏ —Å–∫—Ä—ã—Ç');
            }, 3000);
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ iframe
        iframe.onload = function() {
            console.log('‚úÖ Iframe –∑–∞–≥—Ä—É–∂–µ–Ω:', iframe.src);

            // –î–ï–¢–ê–õ–¨–ù–ê–Ø –î–ò–ê–ì–ù–û–°–¢–ò–ö–ê –ü–†–ò –ó–ê–ì–†–£–ó–ö–ï
            console.log('üìä –î–∏–∞–≥–Ω–æ—Å—Ç–∏–∫–∞ –∑–∞–≥—Ä—É–∂–µ–Ω–Ω–æ–≥–æ iframe:');
            console.log('   - Final URL:', iframe.src);
            console.log('   - Width/Height:', iframe.offsetWidth, 'x', iframe.offsetHeight);

            // –ü—Ä–æ–≤–µ—Ä—è–µ–º –∫–∞–∫–æ–π –∫–∞–Ω–∞–ª –∑–∞–≥—Ä—É–∂–µ–Ω
            const currentUrl = iframe.src;
            if (currentUrl.includes('/channel/general') && currentUrl.includes('layout=embedded')) {
                console.log('üö® –ó–ê–ì–†–£–ñ–ï–ù –ö–ê–ù–ê–õ GENERAL (EMBEDDED) - –ø–æ–ª–µ –≤–≤–æ–¥–∞ –¥–æ–ª–∂–Ω–æ —Ä–∞–±–æ—Ç–∞—Ç—å!');
                console.log('   - –ö–∞–Ω–∞–ª ID: general (–ø—Ä–∞–≤–∏–ª—å–Ω—ã–π)');
                console.log('   - Layout: embedded (–¥–æ–ª–∂–µ–Ω —Å–∫—Ä—ã–≤–∞—Ç—å –Ω–∞–≤–∏–≥–∞—Ü–∏—é)');
                console.log('   - URL —Ä–µ–∂–∏–º: /channel/general?layout=embedded');
                console.log('   - –ï—Å–ª–∏ –ù–ê–í–ò–ì–ê–¶–ò–Ø –í–ò–î–ù–ê - –ø—Ä–æ–±–ª–µ–º–∞ —Å layout=embedded');
            } else if (currentUrl.includes('/channel/vip') && currentUrl.includes('layout=embedded')) {
                console.log('‚úÖ –ó–∞–≥—Ä—É–∂–µ–Ω VIP –∫–∞–Ω–∞–ª (embedded —Ä–µ–∂–∏–º)');
            } else if (currentUrl.includes('/channel/moderators') && currentUrl.includes('layout=embedded')) {
                console.log('‚úÖ –ó–∞–≥—Ä—É–∂–µ–Ω –∫–∞–Ω–∞–ª –º–æ–¥–µ—Ä–∞—Ç–æ—Ä–æ–≤ (embedded —Ä–µ–∂–∏–º)');
            } else {
                console.log('‚ö†Ô∏è –ó–∞–≥—Ä—É–∂–µ–Ω –Ω–µ–∏–∑–≤–µ—Å—Ç–Ω—ã–π URL –∏–ª–∏ –±–µ–∑ embedded —Ä–µ–∂–∏–º–∞:', currentUrl);
            }

            // –°–∫—Ä—ã–≤–∞–µ–º –∏–Ω–¥–∏–∫–∞—Ç–æ—Ä –∑–∞–≥—Ä—É–∑–∫–∏
            setTimeout(() => {
                if (loadingOverlay) {
                    loadingOverlay.style.display = 'none';
                }
            }, 1000);
        };

        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –æ—à–∏–±–æ–∫ iframe
        iframe.onerror = function() {
            console.error('‚ùå –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ iframe:', iframe.src);
            if (loadingOverlay) {
                loadingOverlay.innerHTML = '<div class="loading-text" style="color: red;">‚ùå –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —á–∞—Ç–∞</div>';
            }
        };

        // –ò–°–ü–†–ê–í–õ–ï–ù–ò–ï –û–®–ò–ë–û–ö –í –ö–û–ù–°–û–õ–ò - –¥–æ–±–∞–≤–ª—è–µ–º CSP –∏ –¥—Ä—É–≥–∏–µ –∑–∞–≥–æ–ª–æ–≤–∫–∏ –±–µ–∑–æ–ø–∞—Å–Ω–æ—Å—Ç–∏
        // –£—Å—Ç—Ä–∞–Ω—è–µ–º –æ—à–∏–±–∫–∏ Permissions policy violation
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üîß –ò—Å–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –æ—à–∏–±–æ–∫ –∫–æ–Ω—Å–æ–ª–∏...');

            // –î–æ–±–∞–≤–ª—è–µ–º –º–µ—Ç–∞-—Ç–µ–≥–∏ –¥–ª—è —É—Å—Ç—Ä–∞–Ω–µ–Ω–∏—è –æ—à–∏–±–æ–∫ CSP
            if (!document.querySelector('meta[http-equiv="Content-Security-Policy"]')) {
                const cspMeta = document.createElement('meta');
                cspMeta.setAttribute('http-equiv', 'Content-Security-Policy');
                cspMeta.setAttribute('content', 'frame-src *; script-src \'self\' \'unsafe-inline\'; style-src \'self\' \'unsafe-inline\';');
                document.head.appendChild(cspMeta);
                console.log('‚úÖ CSP –∑–∞–≥–æ–ª–æ–≤–∫–∏ –¥–æ–±–∞–≤–ª–µ–Ω—ã');
            }
        });

        // –î–∏–∞–≥–Ω–æ—Å—Ç–∏–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏
        setTimeout(() => {
            console.log('üîç –§–∏–Ω–∞–ª—å–Ω–∞—è –¥–∏–∞–≥–Ω–æ—Å—Ç–∏–∫–∞ iframe:');
            console.log('URL:', iframe.src);
            console.log('–†–∞–∑–º–µ—Ä—ã iframe:', iframe.offsetWidth, 'x', iframe.offsetHeight);

            if (loadingOverlay && loadingOverlay.style.display !== 'none') {
                console.warn('‚ö†Ô∏è Iframe –Ω–µ –∑–∞–≥—Ä—É–∑–∏–ª—Å—è –∑–∞ 5 —Å–µ–∫—É–Ω–¥');
                loadingOverlay.innerHTML = '<div class="loading-text" style="color: orange;">‚ö†Ô∏è –ó–∞–≥—Ä—É–∑–∫–∞ —á–∞—Ç–∞ –∑–∞–Ω–∏–º–∞–µ—Ç –±–æ–ª—å—à–µ –≤—Ä–µ–º–µ–Ω–∏...</div>';
            }
        }, 5000);

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
        // –§–£–ù–ö–¶–ò–ò –ü–†–ò–í–ï–¢–°–¢–í–ï–ù–ù–û–ì–û –û–ö–ù–ê
        let welcomeTimer;
        let countdownTimer;
        let timeLeft = 10;

        function hideWelcomeModal() {
            const modal = document.getElementById('welcomeModal');
            if (modal) {
                modal.style.animation = 'fadeOut 0.3s ease-out forwards';
                setTimeout(() => {
                    modal.style.display = 'none';
                }, 300);
            }

            // –û—á–∏—â–∞–µ–º —Ç–∞–π–º–µ—Ä—ã
            if (welcomeTimer) clearTimeout(welcomeTimer);
            if (countdownTimer) clearInterval(countdownTimer);
        }

        function startWelcomeCountdown() {
            const countdownElement = document.getElementById('countdown');

            countdownTimer = setInterval(() => {
                timeLeft--;
                if (countdownElement) {
                    countdownElement.textContent = timeLeft;
                }

                if (timeLeft <= 0) {
                    hideWelcomeModal();
                }
            }, 1000);
        }

        function initWelcomeModal() {
            const modal = document.getElementById('welcomeModal');
            if (modal) {
                // –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–µ —Å–∫—Ä—ã—Ç–∏–µ —á–µ—Ä–µ–∑ 10 —Å–µ–∫—É–Ω–¥
                welcomeTimer = setTimeout(hideWelcomeModal, 10000);

                // –ó–∞–ø—É—Å–∫–∞–µ–º –æ–±—Ä–∞—Ç–Ω—ã–π –æ—Ç—Å—á–µ—Ç
                startWelcomeCountdown();

                // –°–∫—Ä—ã—Ç–∏–µ –ø—Ä–∏ –∫–ª–∏–∫–µ –Ω–∞ —Ñ–æ–Ω
                modal.addEventListener('click', (e) => {
                    if (e.target === modal) {
                        hideWelcomeModal();
                    }
                });
            }
        }

        window.addEventListener('load', () => {
            console.log('üöÄ –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è —á–∞—Ç–∞...');
            console.log('üë§ –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å:', currentUser);
            console.log('üéØ –ö–∞–Ω–∞–ª –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é: general');
            console.log('‚úÖ –ß–∞—Ç –≥–æ—Ç–æ–≤ –∫ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—é');

            // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä—É–µ–º –ø—Ä–∏–≤–µ—Ç—Å—Ç–≤–µ–Ω–Ω–æ–µ –æ–∫–Ω–æ
            initWelcomeModal();
        });

        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –∏–∑–º–µ–Ω–µ–Ω–∏—è —Ä–∞–∑–º–µ—Ä–∞ –æ–∫–Ω–∞
        let vh = window.innerHeight * 0.01;
        document.documentElement.style.setProperty('--vh', `${vh}px`);

        window.addEventListener('resize', () => {
            vh = window.innerHeight * 0.01;
            document.documentElement.style.setProperty('--vh', `${vh}px`);
        });
    </script>
</body>
</html>

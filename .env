# Django Settings
DJANGO_DEBUG=True
DJANGO_SECRET_KEY=django-insecure-key-for-dev-besedka-rocket-chat-migration

# Database (PostgreSQL Docker Container)
DATABASE_URL=postgres://postgres:postgres@127.0.0.1:5432/besedka

# Redis URL
REDIS_URL=redis://127.0.0.1:6379/0

# Rocket.Chat Settings
ROCKETCHAT_API_URL=http://127.0.0.1:3000
ROCKETCHAT_ADMIN_TOKEN=
